    <script>
        $(function() {

            function validateInputAddresses(address) {
                    return (/^(0x){1}[0-9a-fA-F]{40}$/i.test(address));
            }

            $( "#start" ).click(function() {
                var address = $('#addressInp').val();
                $( "#start" ).text('Loading...');

                if( address.includes('.eth')) {
                    $.get('/api/ens/'+address).then( res => {
                        if(res){
                            $(location).attr('href','/wallet/'+res)
                        } else {
                            alert('ENS name not found');
                            $( "#start" ).text('start');
                        }
                    })
                } else {
                    if( validateInputAddresses(address) ) {
                        $( "#start" ).text('Loading...');
                        $(location).attr('href','/wallet/'+address)
                    } else {
                        alert('Invalid address')
                        $( "#start" ).text('start');
                    }
                }
                
            });
        });
    </script>
    
